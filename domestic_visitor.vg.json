{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Domestic Visitors by State",
    "font": "Open Sans",
    "fontSize": 16,
    "anchor": "middle"
  },
  "width": 1000,
  "height": 400,
  "projection": {"type": "mercator"},
  "params": [
    {
      "name": "YearSelection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "graticule": {
          "step": [2, 2],
          "extent": [[99, 0], [120, 8]]
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#cccccc",
        "strokeWidth": 0.5
      },
      "encoding": {"tooltip": []}
    },
    {
      "data": {
        "url": "malaysia_state.json",
        "format": {"type": "topojson", "feature": "my"}
      },
      "mark": {"type": "geoshape", "fill": "#f5f5f5", "stroke": "#999"}
    },
    {
      "data": {
        "url": "state.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "calculate": "datum.State + '_' + YearSelection",
          "as": "StateYear"
        },
        {
          "lookup": "StateYear",
          "from": {
            "data": {
              "url": "domestic_visitor.csv",
              "format": {"type": "csv"}
            },
            "key": "StateYear",
            "fields": ["Visitors"]
          }
        },
        {"calculate": "toNumber(datum.Visitors)", "as": "VisitorsNum"},
        {
          "joinaggregate": [
            {"op": "max", "field": "VisitorsNum", "as": "MaxVisitors"}
          ]
        },
        {
          "calculate": "datum.VisitorsNum === datum.MaxVisitors",
          "as": "IsMax"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "#ffffff",
        "strokeWidth": 1
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "VisitorsNum",
          "type": "quantitative",
          "scale": {"range": [50, 3000]},
          "legend": {"title": "Number of Visitors"}
        },
        "color": {
          "condition": {"test": "datum.IsMax", "value":  "#c10707"},
          "value": "#3182bd"
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "VisitorsNum", "type": "quantitative", "title": "Visitor Count"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "State": "Selangor",
            "Longitude": 101.5,
            "Latitude": 3.5,
            "Note": "Selangor has the \n most visitors"
          }
        ]
      },
      "mark": {
        "type": "text",
        "font": "Open Sans",
        "fontSize": 12,
        "align": "left",
        "dx": -100,
        "dy": 50,
        "color": "#c10707",
        "fontWeight": "bold",
        "lineBreak": "\n"
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "text": {"field": "Note"}
      }
    }
  ]
}



